rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Правила для библиотеки сортов перцев
    match /pepper-varieties/{varietyId} {
      // Все могут читать сорта (публичная библиотека)
      allow read: if true;
      
      // Только авторизованные пользователи могут создавать, обновлять и удалять
      allow create, update, delete: if request.auth != null;
    }
    
    // Правила для новой библиотеки сортов v2
    match /varieties_v2/{varietyId} {
      // Все могут читать сорта (публичная библиотека)
      allow read: if true;

      // Только авторизованные пользователи могут создавать, обновлять и удалять
      allow create, update, delete: if request.auth != null;
    }
    
    // Правила для перцев пользователей
    match /peppers/{pepperId} {
      // Пользователи могут читать только свои перцы или старые записи без userId
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        !resource.data.keys().hasAny(['userId']) ||
        resource.data.userId == null
      );

      // Пользователи могут создавать перцы только для себя
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Обновлять/удалять можно, если:
      // 1) документ уже принадлежит пользователю,
      // 2) у документа нет userId (старые записи), и новое состояние закрепляет его за текущим пользователем,
      // 3) userId в документе равен null (старый формат) и пользователь либо сохраняет null, либо назначает себя.
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        (
          !resource.data.keys().hasAny(['userId']) &&
          (
            request.resource == null ||
            request.resource.data.userId == request.auth.uid
          )
        ) ||
        (
          resource.data.userId == null &&
          (
            request.resource == null ||
            !request.resource.data.keys().hasAny(['userId']) ||
            request.resource.data.userId == request.auth.uid
          )
        )
      );
    }
    
    // Правила для дорожной карты
    match /roadmap/{itemId} {
      // Все могут читать элементы дорожной карты (публичная дорожная карта)
      allow read: if true;
      
      // Только пользователь lowdog136@gmail.com может создавать, обновлять и удалять элементы
      allow create, update, delete: if request.auth != null && request.auth.token.email == "lowdog136@gmail.com";
    }
    
    // Правила для пользователей
    match /users/{userId} {
      // Пользователи могут читать и обновлять только свой профиль
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Правила для библиотеки удобрений
    match /fertilizers/{fertilizerId} {
      // Все могут читать удобрения (публичная библиотека)
      allow read: if true;
      
      // Только авторизованные пользователи могут создавать, обновлять и удалять
      allow create, update, delete: if request.auth != null;
    }

    // Растворы для массового полива
    match /solutionRecipes/{recipeId} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        resource.data.userId == null
      );
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        (
          resource.data.userId == null &&
          (
            request.resource == null ||
            request.resource.data.userId == request.auth.uid
          )
        )
      );
    }

    // Батчи растворов и история поливов
    match /wateringBatches/{batchId} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        resource.data.userId == null
      );
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        (
          resource.data.userId == null &&
          (
            request.resource == null ||
            request.resource.data.userId == request.auth.uid
          )
        )
      );

      match /events/{eventId} {
        allow read: if request.auth != null && (
          resource.data.userId == request.auth.uid ||
          resource.data.userId == null
        );
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if request.auth != null && (
          resource.data.userId == request.auth.uid ||
          (
            resource.data.userId == null &&
            (
              request.resource == null ||
              request.resource.data.userId == request.auth.uid
            )
          )
        );
      }
    }
    
    // Правила для кассет рассады
    match /seedlingTrays/{trayId} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        resource.data.userId == null
      );
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        (
          resource.data.userId == null &&
          (
            request.resource == null ||
            request.resource.data.userId == request.auth.uid
          )
        )
      );
    }
    
    // Запрещаем доступ ко всем остальным коллекциям
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 